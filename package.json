{
  "name": "learn-rust",
  "version": "1.0.0",
  "description": "Links, resources, and code related to my learning of the Rust programming language",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/learn_rust.git"
  },
  "engines": {
    "node": ">=10.21.0",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "updates": "npx ncu",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "commitlint-config-gitmoji": "^2.2.3",
    "husky": "^4.2.5",
    "np": "^7.4.0"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-max-length": [0, "always", 80],
      "subject-empty": [0, "never"],
      "type-empty": [0, "never"]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
