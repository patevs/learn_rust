{
  "name": "learn-rust",
  "version": "1.2.0",
  "description": "Links, resources, and code related to my learning of the Rust programming language",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/learn_rust.git"
  },
  "engines": {
    "node": ">=10.21.0",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "prepare": "husky install",
    "updates": "npx ncu",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "commitlint-config-gitmoji": "^2.2.6",
    "husky": "^8.0.2"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        80
      ],
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  }
}
